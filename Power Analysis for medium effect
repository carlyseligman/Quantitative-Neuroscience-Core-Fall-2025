# Power analysis for one-way ANOVA (4 groups) â€” medium effect (Cohen's f = 0.25)
# Requires: statsmodels
# Install with: pip install statsmodels

from statsmodels.stats.power import FTestAnovaPower

# Parameters
alpha = 0.05          # significance level
power = 0.80          # desired power
effect_size = 0.5    # Cohen's f (medium)
k_groups = 4          # number of groups

analysis = FTestAnovaPower()

n_per_group = analysis.solve_power(effect_size=effect_size,
                                   k_groups=k_groups,
                                   alpha=alpha,
                                   power=power)

print(f"Required sample size per group: {n_per_group:.2f}")
print(f"Total sample size (k * n): {k_groups * n_per_group:.2f}")
